{
  "productName": "exile-party",
  "directories": {
    "output": "app-builds"
  },
    "files": [
        "**/*",
        "!*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!.angular-cli.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist/assets/img/app-icon.png",
    "publish": ["github"],
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "dist/assets/img/icon.ico",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/img/icon.ico",
    "target": [
      "AppImage"
    ]
  }
}
